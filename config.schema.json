{
  "pluginAlias": "MieleAtHome",
  "pluginType": "platform",
  "singular": true,
  "customUi": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "",
        "description": "Plugin name as displayed in the Homebridge log."
      },
      "clientID": {
        "title": "Client ID",
        "type": "string",
        "required": true,
        "default": ""
      },
      "clientSecret": {
        "title": "Client Secret",
        "type": "string",
        "required": true,
        "default": ""
      },
      "token": {
        "title": "Token",
        "type": "string",
        "required": true,
        "default": ""
      },
      "refereshToken": {
        "title": "Refresh token",
        "type": "string",
        "required": true,
        "default": ""
      },
      "language": {
        "title": "Language",
        "type": "string",
        "default": "en",
        "oneOf": [
          { "title": "English", "enum": ["en"] },
          { "title": "Deutsch", "enum": ["de"] }
        ],
        "description": "Determines in what language the device name will be displayed in HomeKit."
      },
      "pollInterval": {
        "title": "Poll interval [s]",
        "type": "number",
        "required": false,
        "minimum": 0,
        "default": 60,
        "description": "The number of seconds between update retrievals or 0 to disable."
      },
      "disableStopActionFor": {
        "title": "Disable stop action for",
        "type": "array",
        "uniqueItems": true,
        "items": {
          "title": "Disable stop action for",
          "type": "string",
          "enum": [
            "Washing Machines",
            "Dishwashers"
          ]
        }
      }
    }
  }
}