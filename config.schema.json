{
  "pluginAlias": "Miele@home",
  "pluginType": "platform",
  "singular": true,
  "customUi": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Miele@home",
        "description": "Plugin name as displayed in the Homebridge log."
      },
      "clientID": {
        "title": "Client ID",
        "type": "string",
        "required": true,
        "default": ""
      },
      "clientSecret": {
        "title": "Client Secret",
        "type": "string",
        "required": true,
        "default": ""
      },
      "language": {
        "title": "Language",
        "type": "string",
        "default": "en",
        "oneOf": [
          { "title": "English", "enum": ["en"] },
          { "title": "Deutsch", "enum": ["de"] }
        ],
        "description": "Determines in what language the device name will be displayed in HomeKit."
      },
      "pollInterval": {
        "title": "Poll interval [s]",
        "type": "number",
        "required": false,
        "minimum": 0,
        "default": 60,
        "description": "The number of seconds between state retrievals or 0 to disable auto-update."
      },
      "disableStopActionFor": {
        "title": "Prevent stop/off request ability for",
        "type": "array",
        "uniqueItems": true,
        "items": {
          "type": "string",
          "enum": [
            "Washer",
            "Dryer",
            "WasherDryer",
            "Dishwasher",
            "Fridge",
            "FridgeFreezer"
          ]
        }
      },
      "disableTempSensorFor": {
        "title": "Disable temperature sensor for",
        "type": "array",
        "uniqueItems": true,
        "items": {
          "type": "string",
          "enum": [
            "Washer",
            "Dryer",
            "WasherDryer",
            "Dishwasher"
          ]
        }
      },
      "disableSetTargetTempFor": {
        "title": "Prevent adjusting target temperature for",
        "type": "array",
        "uniqueItems": true,
        "items": {
          "type": "string",
          "enum": [
            "Fridge",
            "FridgeFreezer"
          ]
        }
      }
    }
  },
  "form": [
    "name",
    {
      "type": "fieldset",
      "expandable": true,
      "title": "Authorization",
      "items": [
        "clientID",
        "clientSecret"
      ]
    },
    {
      "type": "fieldset",
      "expandable": true,
      "title": "General",
      "items": [
        "pollInterval",
        "language"
      ]
    },
    {
      "type": "fieldset",
      "expandable": true,
      "title": "Advanced",
      "description": "",
      "items": [
        "disableStopActionFor",
        "disableTempSensorFor",
        "disableSetTargetTempFor"
      ]
    }
  ]
}